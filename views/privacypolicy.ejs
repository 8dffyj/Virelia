<script>
  window.addEventListener('scroll', () => {
    const scrollTop = document.documentElement.scrollTop;
    const scrollHeight = document.documentElement.scrollHeight - document.documentElement.clientHeight;
    const scrollPercent = (scrollTop / scrollHeight) * 100;
    document.getElementById('privacypolicyScrollIndicator').style.width = scrollPercent + '%';
    const btn = document.getElementById('privacypolicyBackToTop');
    btn.classList.toggle('visible', scrollTop > 500);
  });

  const privacypolicySections = document.querySelectorAll('.privacypolicy-section');
  const privacypolicyObserver = new IntersectionObserver((entries) => {
    entries.forEach(entry => {
      if (entry.isIntersecting) entry.target.style.animationPlayState = 'running';
    });
  }, { threshold: 0.1 });
  privacypolicySections.forEach(section => {
    section.style.animationPlayState = 'paused';
    privacypolicyObserver.observe(section);
  });

  document.addEventListener('mousemove', (e) => {
    const orbs = document.querySelectorAll('.privacypolicy-glow-orb');
    const x = e.clientX / window.innerWidth;
    const y = e.clientY / window.innerHeight;
    orbs.forEach((orb, i) => {
      const speed = (i + 1) * 20;
      orb.style.transform = `translate(${x * speed}px, ${y * speed}px)`;
    });
  });
</script>

