<link rel="stylesheet" href="/css/index.css">

<%- include('partials/header') %>

    <section class="hero" id="home">
        <div class="hero-bg"></div>
        <div class="hero-content">
            <h1 class="hero-title">Welcome to <span class="neon">Virelia</span></h1>
            <p class="hero-subtitle">Experience Minecraft like never before on our premium survival server</p>
            <div class="server-ip">
                <span class="ip-label">Server IP:</span>
                <span class="ip-address">play.virelia.live</span>
                <button class="copy-btn" onclick="copyIP()">
                    <i class="fas fa-copy"></i>
                </button>
            </div>
            <div class="hero-stats">
                <div class="stat">
                    <span class="stat-number">100+</span>
                    <span class="stat-label">Active Players</span>
                </div>
                <div class="stat">
                    <span class="stat-number">99.8%</span>
                    <span class="stat-label">Uptime</span>
                </div>
                <div class="stat">
                    <span class="stat-number">24/7</span>
                    <span class="stat-label">Support</span>
                </div>
                <div class="stat">
                    <span class="stat-number">1.21.8</span>
                    <span class="stat-label">Version</span>
                </div>
            </div>
            <div class="hero-buttons">
                <a href="#features" class="btn btn-primary">
                    <i class="fas fa-play"></i>
                    Explore Server
                </a>
                <a href="https://discord.gg/WUyMsbyYAM" class="btn btn-secondary">
                    <i class="fab fa-discord"></i>
                    Join Discord
                </a>
            </div>
        </div>
        <div class="floating-blocks">
            <div class="block block-1"></div>
            <div class="block block-2"></div>
            <div class="block block-3"></div>
            <div class="block block-4"></div>
            <div class="block block-5"></div>
        </div>
    </section>

    <section class="features" id="features">
    <div class="container">
        <h2 class="section-title">Why Choose <span class="highlight">Virelia</span>?</h2>
        <div class="features-grid">
            <div class="feature-card">
                <div class="feature-icon minecraft-icon">
                    <i class="fas fa-mountain"></i>
                </div>
                <h3>SMP Survival Experience</h3>
                <p>Experience authentic survival multiplayer with custom biomes, dungeons, and challenging adventures in our immersive world.</p>
            </div>
            <div class="feature-card">
                <div class="feature-icon minecraft-icon">
                    <i class="fas fa-theater-masks"></i>
                </div>
                <h3>Roleplay Adventures</h3>
                <p>Create your character's story and immerse yourself in collaborative roleplay experiences with our dedicated community.</p>
            </div>
            <div class="feature-card">
                <div class="feature-icon minecraft-icon">
                    <i class="fas fa-users"></i>
                </div>
                <h3>Friendly Community</h3>
                <p>Join our friendly community of builders, explorers, and adventurers. Make lasting friendships and create epic builds together.</p>
            </div>
            <div class="feature-card">
                <div class="feature-icon minecraft-icon">
                    <i class="fas fa-shield-alt"></i>
                </div>
                <h3>Grief Protection</h3>
                <p>Your creations are safe with our advanced land claiming system and active moderation team protecting your builds.</p>
            </div>
            <div class="feature-card">
                <div class="feature-icon minecraft-icon">
                    <i class="fas fa-heart"></i>
                </div>
                <h3>Welcoming Environment</h3>
                <p>New players are always welcome! Our community is known for being helpful, inclusive, and supportive of all skill levels.</p>
            </div>
            <div class="feature-card">
                <div class="feature-icon minecraft-icon">
                    <i class="fas fa-home"></i>
                </div>
                <h3>Build Together</h3>
                <p>Collaborate on massive projects, share building techniques, and create amazing structures in our creative and supportive community.</p>
            </div>
        </div>
    </div>
</section>

    <section class="stats-section">
        <div class="container">
            <div class="stats-grid">
                <div class="stat-card">
                    <i class="fas fa-server"></i>
                    <h3>Server Statistics</h3>
                    <div class="stat-item">
                        <span>World Size:</span>
                        <span>5,000,000 x 5,000,000</span>
                    </div>
                    <div class="stat-item">
                        <span>Total Builds:</span>
                        <span>15,000+</span>
                    </div>
                    <div class="stat-item">
                        <span>Protected Areas:</span>
                        <span>8,500+</span>
                    </div>
                </div>
                <div class="stat-card">
                    <i class="fas fa-clock"></i>
                    <h3>Server Performance</h3>
                    <div class="stat-item">
                        <span>Average TPS:</span>
                        <span>19.8/20</span>
                    </div>
                    <div class="stat-item">
                        <span>RAM Usage:</span>
                        <span>10GB Dedicated</span>
                    </div>
                    <div class="stat-item">
                        <span>Location:</span>
                        <span>INDIA Mumbai</span>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <section class="community" id="community">
        <div class="container">
            <h2 class="section-title">Join Our <span class="highlight">Community</span></h2>
            <div class="community-grid">
                <div class="community-card">
                    <i class="fab fa-discord"></i>
                    <h3>Discord Server</h3>
                    <p>Chat with other players, get support, and stay updated with server news on our active Discord community.</p>
                    <a href="https://discord.gg/WUyMsbyYAM" class="btn btn-discord">Join Discord</a>
                </div>
                <div class="community-card">
                    <i class="fas fa-book"></i>
                    <h3>Wiki & Guides</h3>
                    <p>Learn about custom features, recipes, and gameplay mechanics with our comprehensive player guides.</p>
                    <a href="https://virelia.live/guide" class="btn btn-secondary">View Wiki</a>
                </div>
                <div class="community-card">
                    <i class="fas fa-camera"></i>
                    <h3>Gallery (Coming Soon)</h3>
                    <p>Showcase your amazing builds and explore incredible creations from our talented community members.</p>
                    <a href="#" class="btn btn-secondary">Browse Gallery</a>
                </div>
            </div>
        </div>
    </section>

    <%- include('partials/footer') %>