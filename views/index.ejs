<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="/css/styles.css">
</head>
<body>
    <!-- Professional Header -->
    <header class="header">
        <div class="header-content">
            <div class="pro-badge">Professional Gaming Platform</div>
            <h1><%= pageTitle %></h1>
            <p><%= description %></p>
        </div>
    </header>

    <div class="container">
        <!-- Solo Access Plans -->
        <section class="section">
            <h2 class="section-title">Solo Access</h2>
            <p class="section-subtitle">Individual player subscriptions with premium features and dedicated support</p>
            <div class="plans-grid">
                <% plans.solo.forEach(function(plan) { %>
                <div class="plan-card <%= plan.type %>">
                    <% if (plan.discount) { %>
                    <div class="discount-badge"><%= plan.discount %></div>
                    <% } %>
                    <div class="plan-content">
                        <h3 class="plan-title"><%= plan.title %></h3>
                        <p class="plan-subtitle"><%= plan.subtitle %></p>
                        <div class="price-container">
                            <div class="price"><%= plan.price %></div>
                            <div class="duration"><%= plan.duration %></div>
                        </div>
                        <div class="features">
                            <ul>
                                <% plan.features.forEach(function(feature) { %>
                                <li><%= feature %></li>
                                <% }); %>
                            </ul>
                        </div>
                        <a href="<%= discordLink %>" class="subscribe-btn" target="_blank">
                            <% if (plan.type === 'bronze') { %>Get Started<% } 
                               else if (plan.type === 'silver') { %>Choose Silver<% } 
                               else { %>Go Premium<% } %>
                        </a>
                    </div>
                </div>
                <% }); %>
            </div>
        </section>

        <!-- Duo Access Plans -->
        <section class="section">
            <h2 class="section-title">Duo Access</h2>
            <p class="section-subtitle">Perfect for gaming partners with shared features and team coordination tools</p>
            <div class="plans-grid">
                <% plans.duo.forEach(function(plan) { %>
                <div class="plan-card <%= plan.type %>">
                    <% if (plan.discount) { %>
                    <div class="discount-badge"><%= plan.discount %></div>
                    <% } %>
                    <div class="plan-content">
                        <h3 class="plan-title"><%= plan.title %></h3>
                        <p class="plan-subtitle"><%= plan.subtitle %></p>
                        <div class="price-container">
                            <div class="price"><%= plan.price %></div>
                            <div class="duration"><%= plan.duration %></div>
                        </div>
                        <div class="features">
                            <ul>
                                <% plan.features.forEach(function(feature) { %>
                                <li><%= feature %></li>
                                <% }); %>
                            </ul>
                        </div>
                        <a href="<%= discordLink %>" class="subscribe-btn" target="_blank">
                            <% if (plan.type === 'bronze') { %>Start Duo<% } 
                               else if (plan.type === 'silver') { %>Choose Silver<% } 
                               else { %>Go Premium<% } %>
                        </a>
                    </div>
                </div>
                <% }); %>
            </div>
        </section>

        <!-- Custom Subscription Calculator -->
        <section class="section">
            <div class="custom-section">
                <div class="custom-content">
                    <h2 class="custom-title">Custom Enterprise</h2>
                    <p class="section-subtitle">Tailored solutions for teams and organizations with specific requirements</p>
                    
                    <div class="calculator">
                        <div class="input-group">
                            <label for="players">Team Size (Players):</label>
                            <input type="number" id="players" min="1" max="50" value="1">
                        </div>
                        
                        <div class="input-group">
                            <label for="duration">Duration (Months):</label>
                            <input type="number" id="duration" min="1" max="12" value="1">
                        </div>
                        
                        <div class="price-display">
                            <div class="calculated-price" id="calculatedPrice">$1.00</div>
                            <div class="savings" id="savingsText"></div>
                        </div>
                        
                        <a href="<%= discordLink %>" class="subscribe-btn" target="_blank">Request Enterprise Quote</a>
                    </div>
                </div>
            </div>
        </section>
    </div>

    <!-- Professional Footer -->
    <footer class="footer">
        <div class="footer-content">
            <p>&copy; <%= currentYear %> Game Server Whitelist. All rights reserved.</p>
            <p class="note">Whitelist access granted within 24 hours after payment confirmation.</p>
            <div class="footer-credits">
                <span>Created by</span>
                <strong><%= creator %></strong>
                <span>â€¢</span>
                <a href="<%= githubLink %>" target="_blank"><%= githubLink %></a>
            </div>
        </div>
    </footer>

    <script src="/js/calculator.js"></script>
</body>
</html>